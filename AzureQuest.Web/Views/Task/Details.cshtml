@model AzureQuest.Web.Models.TaskViewModel.SimpleTask

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Task</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd>
            @Model.State.Last().Status.ToString()
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.State) Date
        </dt>
        <dd>
            @Model.State.Last().RegistrationDate.ToString("dd/MM/yyyy hh:mm:ss")
        </dd>
    </dl>
</div>
<div>
    @if (!Model.State.Any(s => s.Status == AzureQuest.Web.Models.TaskViewModel.TaskStatusType.Canceled || s.Status == AzureQuest.Web.Models.TaskViewModel.TaskStatusType.Done))
    {
        <span>
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
            @*<a asp-action="Cancel" asp-route-id="@Model.Id" style="color: red;">Cancel</a> |
            <a asp-action="Complete" asp-route-id="@Model.Id" style="color: green;">Complete</a> |*@
        </span>
    }
    <a asp-action="Index">Back to List</a>
</div>
